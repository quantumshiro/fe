// Short binary expressions stay on one line
fn short_expr() {
    let x = a + b
    let y = a + b + c
}

// Long binary expressions should break before the operator
fn long_expr() {
    let result = very_long_variable_name_one + very_long_variable_name_two + very_long_variable_name_three
    let another = some_function_call(arg1, arg2) + another_function_call(arg3, arg4) + yet_another_call(arg5)
}

// Nested binary expressions that exceed line width
fn nested() {
    let x = (first_long_operand + second_long_operand) * (third_long_operand + fourth_long_operand + fifth_long_operand)
    let y = first_very_long_operand + second_very_long_operand * third_very_long_operand + fourth_very_long_operand
}

// Binary expressions with different operators that exceed line width
fn mixed_operators() {
    let cmp = very_long_left_side_expression_name == very_long_right_side_expression_name_that_is_even_longer
    let logical = first_condition_check && second_condition_check && third_condition_check || fourth_condition_check
}

// Precedence-aware indentation: && should indent relative to ||
fn precedence_indentation() {
    let x = very_long_condition_alpha || very_long_condition_beta && very_long_condition_gamma && very_long_condition_delta && other_thing || very_long_condition_epsilon && foo
}
