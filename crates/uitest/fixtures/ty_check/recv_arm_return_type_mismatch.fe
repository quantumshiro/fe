// Test that recv arm return types must match the msg variant

msg BankMsg {
    #[selector = 0x01]
    Withdraw { amount: u64 } -> bool,
    #[selector = 0x02]
    Deposit { amount: u64 } -> u64,
}

pub contract BadReturns {
    data: u64,

    recv BankMsg {
        // Annotated return type disagrees with the variant return type (should be bool)
        Withdraw { amount } -> u32 {
            0
        }

        // No annotation; still expects the variant return type (u64)
        Deposit { amount } {
            false
        }
    }
}
